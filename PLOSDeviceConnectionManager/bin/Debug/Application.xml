<?xml version="1.0" encoding="shift_jis"?>
<ApplicationSetting xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <System>
    <!-- SQLServer接続認証情報 -->
    <DbConnect>Data Source=SAN1-PC03630-3\SQLEXPRESS;Integrated Security=True;Initial Catalog=PLOS_DB_NEW;</DbConnect>
    <!-- 定周期タイマーの監視間隔(ミリ秒) -->
    <TimeInterval>100</TimeInterval>
    <!-- 稼働シフト情報更新時刻(hh:mm) -->
    <UpdateShiftInfo>09:00</UpdateShiftInfo>
    <!-- ファイル削除閾値(GB) -->
    <DeleteFileThreshold>500</DeleteFileThreshold>
    <!-- カメラ最大接続台数 -->
    <CameraMaxNum>7</CameraMaxNum>
    <!-- QRリーダ最大接続台数 -->
    <QrReaderMaxNum>1</QrReaderMaxNum>
    <!-- GPU使用設定(0:不使用/1:使用) -->
    <UseGpu>0</UseGpu>
    <!-- 動画テキストカラー設定(英字表記のみ) -->
    <TextFontColor>Red</TextFontColor>
  </System>
  <WebCam>
    <!-- 保存フォルダ　現象動画作成用テンポラリデータ -->
    <TempFilePath>D:\DKST\tempDir</TempFilePath>
    <!-- 保存フォルダ　サイクルビデオ -->
    <CycleVideoPath>D:\DKST\cycleDir</CycleVideoPath>
    <!-- 削除要否フラグ(1:削除/0:削除無し) -->
    <DeleteFile>1</DeleteFile>
    <!-- 画面上に動画表示(1:する/0:しない) -->
    <ShowStream>1</ShowStream>
  </WebCam>
  <Dio>
    <!-- DIO接続名称 -->
    <DeviceName>DIO000</DeviceName>
    <!-- ブザー鳴動時間(秒) -->
    <BuzzerRingingTime>10</BuzzerRingingTime>
  </Dio>
</ApplicationSetting>